APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=redis
CACHE_PREFIX=admin_cache_

# Redis Cache Configuration
REDIS_CACHE_TTL=3600
REDIS_CACHE_HERO_TTL=7200
REDIS_CACHE_ABOUT_TTL=7200
REDIS_CACHE_SERVICES_TTL=1800
REDIS_CACHE_PROJECTS_TTL=1800
REDIS_CACHE_SETTINGS_TTL=3600

# Query Performance Monitoring
QUERY_MONITORING_ENABLED=false
SLOW_QUERY_THRESHOLD=100
HIGH_QUERY_COUNT_THRESHOLD=20

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Admin Security Configuration
SANCTUM_EXPIRATION=480
SANCTUM_TOKEN_PREFIX=admin_
SANCTUM_STATEFUL_DOMAINS=localhost:3000,localhost:5173,127.0.0.1:3000,127.0.0.1:5173

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# IP Whitelist Configuration
IP_WHITELIST_ENABLED=false
IP_WHITELIST_BYPASS_LOCAL=true
ALLOWED_IPS=
# Example: ALLOWED_IPS=127.0.0.1,192.168.1.0/24,10.0.0.1

# Security Headers Configuration
SECURITY_HSTS_ENABLED=true
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_HSTS_SUBDOMAINS=true
SECURITY_HSTS_PRELOAD=true
SECURITY_CSP_ENABLED=true
SECURITY_PERMISSIONS_POLICY_ENABLED=true

# Audit Logging Configuration
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_CHANNEL=daily
AUDIT_LOG_REQUESTS=true
AUDIT_LOG_RESPONSES=false
AUDIT_LOG_QUERY_PARAMS=true
AUDIT_LOG_REQUEST_BODY=false

# Rate Limiting Configuration
RATE_LIMIT_AUTH_PER_MINUTE=5
RATE_LIMIT_AUTH_PER_HOUR=20
RATE_LIMIT_AUTH_PER_DAY=50

RATE_LIMIT_API_PER_MINUTE=120
RATE_LIMIT_API_PER_HOUR=2000
RATE_LIMIT_API_PER_DAY=10000

RATE_LIMIT_UPLOAD_PER_MINUTE=10
RATE_LIMIT_UPLOAD_PER_HOUR=50
RATE_LIMIT_UPLOAD_PER_DAY=200

RATE_LIMIT_BULK_PER_MINUTE=5
RATE_LIMIT_BULK_PER_HOUR=20
RATE_LIMIT_BULK_PER_DAY=50

RATE_LIMIT_SYSTEM_PER_MINUTE=2
RATE_LIMIT_SYSTEM_PER_HOUR=5
RATE_LIMIT_SYSTEM_PER_DAY=10

# Admin Session Configuration
ADMIN_SESSION_TIMEOUT=480
ADMIN_CONCURRENT_SESSIONS=3
ADMIN_FORCE_LOGOUT_IP_CHANGE=false

# File Upload Security
MAX_UPLOAD_SIZE=5242880
SCAN_UPLOADS_FOR_MALWARE=false
QUARANTINE_SUSPICIOUS_UPLOADS=true
